{
  "name": "server",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "check-types": "npm run check-types --workspaces",
    "dev:native": "npm run dev --workspace native",
    "dev:web": "npm run dev --workspace web",
    "dev:server": "npm run dev --workspace server",
    "db:push": "npm run db:push --workspace @server/db",
    "db:studio": "npm run db:studio --workspace @server/db",
    "db:generate": "npm run db:generate --workspace @server/db",
    "db:migrate": "npm run db:migrate --workspace @server/db"
  },
  "packageManager": "npm@11.4.2",
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^22.13.11"
  }
}
